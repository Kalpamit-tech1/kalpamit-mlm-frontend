{
  "version": "1.0",
  "sections": [
    {
      "id": "personal",
      "title": "Personal Information",
      "description": "Please provide your basic personal details",
      "fields": [
        {
          "id": "fullName",
          "type": "text",
          "label": "Full Name",
          "placeholder": "Enter your full name",
          "required": true,
          "validation": {
            "minLength": 2,
            "maxLength": 100,
            "pattern": "^[a-zA-Z\\s]+$"
          }
        },
        {
          "id": "mobileNumber",
          "type": "tel",
          "label": "Mobile Number",
          "placeholder": "+91 9876543210",
          "required": true,
          "validation": {
            "pattern": "^\\+?[1-9]\\d{1,14}$"
          }
        },
        {
          "id": "email",
          "type": "email",
          "label": "Email Address",
          "placeholder": "your.email@example.com",
          "required": true,
          "validation": {
            "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$"
          }
        },
        {
          "id": "dateOfBirth",
          "type": "date",
          "label": "Date of Birth",
          "required": true,
          "validation": {
            "maxDate": "today-18years"
          }
        },
        {
          "id": "gender",
          "type": "select",
          "label": "Gender",
          "required": true,
          "options": [
            { "value": "male", "label": "Male" },
            { "value": "female", "label": "Female" },
            { "value": "other", "label": "Other" }
          ]
        }
      ]
    },
    {
      "id": "documents",
      "title": "Document Verification",
      "description": "Please provide your identity and tax documents",
      "fields": [
        {
          "id": "panNumber",
          "type": "text",
          "label": "PAN Number",
          "placeholder": "ABCDE1234F",
          "required": true,
          "validation": {
            "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
            "uppercase": true
          }
        },
        {
          "id": "aadhaarNumber",
          "type": "text",
          "label": "Aadhaar Number",
          "placeholder": "1234 5678 9012",
          "required": true,
          "validation": {
            "pattern": "^[0-9]{4}\\s?[0-9]{4}\\s?[0-9]{4}$"
          }
        },
        {
          "id": "panCard",
          "type": "file",
          "label": "PAN Card Upload",
          "accept": "image/*,.pdf",
          "required": true,
          "maxSize": "5MB"
        },
        {
          "id": "aadhaarCard",
          "type": "file",
          "label": "Aadhaar Card Upload",
          "accept": "image/*,.pdf",
          "required": true,
          "maxSize": "5MB"
        }
      ]
    },
    {
      "id": "nominee",
      "title": "Nominee Information",
      "description": "Please provide nominee details for your account",
      "fields": [
        {
          "id": "nomineeName",
          "type": "text",
          "label": "Nominee Full Name",
          "placeholder": "Enter nominee's full name",
          "required": true,
          "validation": {
            "minLength": 2,
            "maxLength": 100,
            "pattern": "^[a-zA-Z\\s]+$"
          }
        },
        {
          "id": "nomineeRelation",
          "type": "select",
          "label": "Relationship with Nominee",
          "required": true,
          "options": [
            { "value": "spouse", "label": "Spouse" },
            { "value": "father", "label": "Father" },
            { "value": "mother", "label": "Mother" },
            { "value": "son", "label": "Son" },
            { "value": "daughter", "label": "Daughter" },
            { "value": "brother", "label": "Brother" },
            { "value": "sister", "label": "Sister" },
            { "value": "other", "label": "Other" }
          ]
        },
        {
          "id": "nomineeMobile",
          "type": "tel",
          "label": "Nominee Mobile Number",
          "placeholder": "+91 9876543210",
          "required": false,
          "validation": {
            "pattern": "^\\+?[1-9]\\d{1,14}$"
          }
        }
      ]
    },
    {
      "id": "banking",
      "title": "Banking Information",
      "description": "Please provide your bank account details for withdrawals",
      "fields": [
        {
          "id": "bankName",
          "type": "text",
          "label": "Bank Name",
          "placeholder": "State Bank of India",
          "required": true,
          "validation": {
            "minLength": 2,
            "maxLength": 100
          }
        },
        {
          "id": "accountNumber",
          "type": "text",
          "label": "Account Number",
          "placeholder": "1234567890",
          "required": true,
          "validation": {
            "pattern": "^[0-9]{9,18}$"
          }
        },
        {
          "id": "ifscCode",
          "type": "text",
          "label": "IFSC Code",
          "placeholder": "SBIN0001234",
          "required": true,
          "validation": {
            "pattern": "^[A-Z]{4}0[A-Z0-9]{6}$",
            "uppercase": true
          }
        },
        {
          "id": "accountType",
          "type": "select",
          "label": "Account Type",
          "required": true,
          "options": [
            { "value": "savings", "label": "Savings Account" },
            { "value": "current", "label": "Current Account" }
          ]
        }
      ]
    }
  ]
}